# Server
PORT=4000
NODE_ENV=development

# MongoDB
MONGO_URI=mongodb://localhost:27017/secops

# Redis
REDIS_URL=redis://localhost:6379

# Session
SESSION_SECRET=your_super_secret_session_key_change_this

# JWT
JWT_SECRET=your_jwt_secret_key_change_this
JWT_EXPIRES_IN=7d

# GitHub OAuth App
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:4000/api/auth/github/callback

# GitHub App (for webhooks & PR automation)
GITHUB_APP_ID=your_github_app_id
GITHUB_APP_PRIVATE_KEY=your_pem_key_here_base64_encoded
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Groq API
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama3-70b-8192
GROQ_MAX_TOKENS=1024

# Token Encryption
TOKEN_ENCRYPTION_KEY=32_char_encryption_key_change_this

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Scan Limits
MAX_CONCURRENT_SCANS_PER_TEAM=3
MAX_FILES_PER_SCAN=500
MAX_SNIPPET_TOKENS=800
